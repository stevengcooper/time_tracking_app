<h1>Projects.where(Work needs to be done)</h1>

<% if @projects %>
  <table>
    <thead>
      <tr>
        <th>Project Name </th>
        <th>Maximum Hours </th>
        <th>Hours Logged </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.allowed_hours %></td>
          <td class="<%= "over" if project.over_maximum? %>"><%= project.hours_logged %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>
<div class="links">
  <%= link_to "Home", developers_path %>
</div>
